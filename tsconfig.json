{
  "compilerOptions": {
    "target": "ES2020",                    // Set the target JavaScript version
    "module": "CommonJS",                 // Use CommonJS module system for Node.js
    "strict": true,                       // Enable strict type-checking options
    "esModuleInterop": true,              // Enable interop between CommonJS and ES modules
    "resolveJsonModule": true,            // Enable importing JSON files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "outDir": "./dist",                   // Output directory for compiled files
    "rootDir": "./",                      // Root directory of the source files
    "moduleResolution": "node",          // Use Node module resolution strategy
    "types": ["node"]                     // Include type definitions for Node.js
  },
  "include": [
    "lambda/**/*.ts",                    // Include all TypeScript files in the 'lambda' folder
    "lib/**/*.ts",                       // Include all TypeScript files in the 'lib' folder
    "shared/**/*.ts",                    // Include all TypeScript files in the 'shared' folder
    "shared/*.json"                      // Include shared JSON files
  ],
  "exclude": [
    "node_modules",                      // Exclude 'node_modules' directory
    "cdk.out",                           // Exclude CDK output directory
    "dist"                               // Exclude output directory
  ]
}
